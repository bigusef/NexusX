# ENVIRONMENT: development, testing, staging, or production
# Note: debug mode is automatically enabled for development, testing, and staging
ENVIRONMENT=development

# CORS Configuration (comma-separated origins or "*" for all)
ALLOWED_ORIGINS=*

# Database Configuration
DATABASE_URL=postgresql+asyncpg://nexus:nexus@postgres:5432/nexus

# Redis Configuration (used for cache and ARQ worker broker)
REDIS_URL=redis://redis:6379/0
